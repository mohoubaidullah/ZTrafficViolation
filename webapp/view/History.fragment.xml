<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:table="sap.ui.table">
	<Dialog id="idHistoryView" title="History" contentWidth="800px">
		<VBox class="sapUiSmallMargin">
			<table:Table rows="{historyModel>/results}" title="Violation Approval Histroy" visibleRowCount="7">
				<table:columns>
					<table:Column width="3rem">
						<Label text="Step"/>
						<table:template>
							<Text text="{historyModel>Counter}" wrapping="false"/>
						</table:template>
					</table:Column>
					<table:Column width="6rem">
						<Label text="Level"/>
						<table:template>
							<Text text="{ path: 'historyModel>Lvl', formatter: '.formatterLevel' }"/>
						</table:template>
					</table:Column>
					<table:Column width="9rem">
						<Label text="User"/>
						<table:template>
							<Text text="{historyModel>ChangedBy}"/>
						</table:template>
					</table:Column>
					<table:Column width="9rem">
						<Label text="Date"/>
						<table:template>
							<DatePicker value="{ path: 'historyModel>ChangedDate', type: 'sap.ui.model.type.Date', formatOptions: {source: {pattern: 'timestamp'}} }"/>
						</table:template>
					</table:Column>
					<table:Column width="9rem">
						<Label text="Time"/>
						<table:template>
							<!--<Text text="{ChangedTime}"/>-->
							<Input value="{ path: 'historyModel>ChangedTime', type: 'sap.ui.model.type.Time'}" enabled="false"/>
						</table:template>
					</table:Column>
					<table:Column width="9rem">
						<Label text="Status"/>
						<table:template>
							<Text text="{ path: 'historyModel>Status', formatter: '.formatterStatus' }"/>
						</table:template>
					</table:Column>
				</table:columns>
			</table:Table>
		</VBox>
		<beginButton>
			<Button text="Close" press="onCloseHistory"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition>